@model HealtyVet.Models.AppointmentModel.GetAllAppointmentsViewModel
@{
    ViewData["Title"] = "IndexDoctor";
}

<h1>Programari:</h1>

@*<br />
<a href='@Url.Action("AddAppointment", "Appointment")' class="btn btn-danger">Add appointment</a>*@

<table class="table">
    <thead class="thead-dark">
        <tr>

            <th style="text-align:center">
                @Html.DisplayName("Description")
            </th>
            <th style="text-align:center">
                @Html.DisplayName("Date")
            </th>
            <th style="text-align:center"> Sterge programare</th>
            <th style="text-align:center"> Update programare</th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.Appointments)


        {
        <tr>



            <td style="text-align:center">

                @Html.DisplayFor(model => item.Description)

            </td>

            <td style="text-align:center">
                @Html.DisplayFor(model => item.Date)
            </td>
            <td style="text-align:center">
                <a asp-action="DeleteAppointment" asp-route-id="@item.Id" class="btn btn-light">Sterge programare</a>

            </td>
            <td style="text-align:center">
                <a asp-action="UpdateAppointment" asp-route-id="@item.Id" class="btn btn-light">Update programare</a>

            </td>
        </tr>

        }
    </tbody>
</table>

