@model HealtyVet.Models.DoctorModel.GetAllServicesViewModel
@{
    ViewData["Title"] = "IndexPetOwner";
}

<h1>Ce servicii oferim:</h1>

<br />


<table class="table">
    <thead class="thead-dark">
        <tr>

            <th style="text-align:center"> @Html.DisplayName("Tip serviciu")</th>
            <th style="text-align:center">  @Html.DisplayName("Pret")</th>
            <th style="text-align:center">@Html.DisplayName("Descriere")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Services)
        {
            <tr>

                <td style="text-align:center">

                    @Html.DisplayFor(model => item.Type)

                </td>



                <td style="text-align:center">

                    @Html.DisplayFor(model => item.Price)

                </td>


                <td style="text-align:center">
                    @Html.DisplayFor(model => item.Description)
                </td>
            </tr>
        }
    </tbody>
</table>




