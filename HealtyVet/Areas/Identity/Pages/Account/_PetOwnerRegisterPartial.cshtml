@page
@model RegisterModel
@{
    ViewData["Title"] = "_PetOwnerRegisterPartial";
}



<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Creati un cont nou client.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" /><p>Confirm email</p>
                <input asp-for="Input.EmailPetOwner" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstNamePetOwner">Nume</label>
                <input asp-for="Input.FirstNamePetOwner" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.LastNamePetOwner"> Prenume</label>
                <input asp-for="Input.LastNamePetOwner" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="Input.AddressPetOwner"> Adresa</label>
                <input asp-for="Input.AddressPetOwner" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumberPetOwner"> Numar telefon</label>
                <input asp-for="Input.PhoneNumberPetOwner" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
