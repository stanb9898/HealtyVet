@page
@model RegisterModel
@{
    ViewData["Title"] = "_DoctorRegisterPartial";
}



<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Creati un cont nou doctor.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" /><p>Confirm email</p>
                <input asp-for="Input.EmailDoctor" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstNameDoctor">Nume</label>
                <input asp-for="Input.FirstNameDoctor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.LastNameDoctor"> Prenume</label>
                <input asp-for="Input.LastNameDoctor" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="Input.AddressDoctor"> Adresa</label>
                <input asp-for="Input.AddressDoctor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumberDoctor">Numar telefon</label>
                <input asp-for="Input.PhoneNumberDoctor" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
